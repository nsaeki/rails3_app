<table class="profile">
	<tr>
		<td class="main">
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %>
			</h1>
			<%=	render :partial => "follow_form" if signed_in? %>
			<% unless @user.microposts.empty? %>
			<ol class="microposts" summary="User microposts">
					<%= render @microposts %>
			</ol>
			<%= will_paginate @microposts %>
		</td>
		</td>
		<% end %>
		<td class="sidebar round">
			<%= render :partial => 'shared/profile', :locals => {:user => @user} %>
			<%= render :partial => "shared/stats" %>
		</td>
	</tr>
</table>
